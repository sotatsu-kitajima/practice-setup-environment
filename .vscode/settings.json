{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.addMissingImports": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "cSpell.words": ["sochan"],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "pnpm-lock.yaml"
  ],
  "files.insertFinalNewline": true,
  //何も操作をしていないファイルを閉じないようにする。
  "workbench.editor.enablePreview": false,
  //無をコピーできなくする。pasteする際に間違ってコピーしてしまっても大丈夫になる。
  "editor.emptySelectionClipboard": false
}
